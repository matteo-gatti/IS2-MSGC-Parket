                    <p class="card-text insertionName"></p>
                    <p class="card-text insertionStartDate"></p>
                    <p class="card-text insertionEndDate"></p>
                    <p class="card-text insertionPriceHourly"></p>
                    <div class="d-flex justify-content-between align-items-center">
                      <div class="d-flex w-100 gap-2">
                        <button onclick="detailInsertion()" type="button"
                          class="btn  btn-outline-primary">Dettagli</button>
                        <% if (owner) { %>
                          <button onclick="modifyInsertion()" type="button"
                            class="btn  btn-outline-secondary">Modifica</button>
                          <button onclick="deleteInsertion()" type="button"
                            class="btn  btn-outline-danger ms-auto">Elimina</button>
                          <% } %>
                      </div>
                    </div>
                  </div>
                  <!-- </div> -->
                </div>
              </div>
              <div class="col-md-1"></div>
            </div>
            <hr />
            <!-- REVIEWS VISUALIZER -->
            <h3 class="my-4">Recensioni</h3>
            <!-- REVIEWS CONTAINER-->
            <div class="container row mt-3 float">
              <div class="col-md-4">
                <div class="container">
                  <div class="">
                    <div class="rating-card">
                      <div class="text-center m-b-30">
                        <h4>Panoramica recensioni</h4>
                        <br>
                        <h1 class="rating-number"><span id="starAverage">0</span><small>/5</small></h1>
                        <div class="rating-stars d-inline-block position-relative mr-2">
                          <img src="img/grey-star.svg" alt="">
