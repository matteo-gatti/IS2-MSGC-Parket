                <button class=" btn  btn-outline-secondary " onclick="modifyParking()" id="btnModifica">Modifica
                  Parcheggio</button>
                <button class=" btn  btn-outline-danger ms-auto" onclick="deleteParking()" id="btnElimina">Elimina
                  Parcheggio</button>
              </div>
              <% } %>

          </div>

        </div>
        <!-- /.row -->
        <hr />

        <!-- Related Projects Row -->
        <h3 class="my-4">Inserzioni</h3>
        <% if (owner) { %>
