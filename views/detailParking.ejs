            data-bs-target="#exampleModal" data-bs-name="" data-bs-id="">Nuova Inserzione</btn>
          <% } %>
            <!-- <div class="row"> -->
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3 col-md-11" id="insertionContainer">
              <div class="col" id="firstInsertion" hidden>
                <div class="card shadow-sm">
                  <div class="card-body">
