<body>
  <%- include("./header.ejs", {logged: logged}) %>
  <!-- Page Content -->
 
  <div class="row">
    <div class="col-md-2">
      <div class="container mt-5" style="padding-left: 25%">
        <btn class="btn btn-default btn-secondary mx-auto" onclick="goBack()">Torna indietro</btn>
      </div>
    </div>
    

    <div class=" row col-md-10" >
      <h1 style="color: red;">Dati Inserzione</h1>
      <hr>
      <!--<p id="usrId" hidden></p>-->
      <div class="row">
      <div class="col">
          <h3>Nome: </h3> <h5></h5>
          <h3>Inizio: </h3>    <h5></h5>
          <h3>Fine: </h3>    <h5></h5>
          <br>
      </div>
      <div class="col">
          <h3>Intervallo Minimo prenotazione: </h3>  <h5></h5>
          <h3>Costo Orario: </h3> <h5></h5>
          <h3>Costo Giornaliero: </h3> <h5></h5>
          <h3>Ricorrente: </h3> <h5></h5>
      </div>
    </div>
    <div class="row recurrencyDiv" hidden>
      <h1>Valida nei giorni: </h1>
      <h6>Lun, Mar</h6>
      <h2>Fascia oraria: </h2>
      <h6>09:00 - 16:00</h6>
    </div>
  </div>
    <hr>
</div>
<div class="container">
    <h1 >Prenotazioni per questa inserzione:</h1>
    <li hidden class="prenotazList">text</li>
    <ul id="prenotazContainer">
    
</div>
<hr>
<div class="container" <% if (owner) { %> hidden <% } %>> <!--da visualizzare solo se non si Ã¨ proprietari -->
  <h1 >Prenota uno slot:</h1>
  <div class='row mb-3'>
    <div class='col-sm-6'>
      <label for='linkedPickers1Input' class='form-label'>Da:</label>
      <div
      class='input-group log-event'
      id='linkedPickers1'
      data-td-target-input='nearest'
      data-td-target-toggle='nearest'
      >
      <input
        id='linkedPickers1Input'
        type='text'
        class='form-control'
        data-td-target='#linkedPickers1'
        required
      />
      <span
        class='input-group-text'
        data-td-target='#linkedPickers1'
        data-td-toggle='datetimepicker'
      >
        <span class='fa-solid fa-calendar'></span>
      </span>
      </div>
    </div>
    <div class='col-sm-6'>
      <label for='linkedPickers2Input' class='form-label'>A:</label>
      <div
      class='input-group log-event'
      id='linkedPickers2'
      data-td-target-input='nearest'
      data-td-target-toggle='nearest'
      >
      <input
        id='linkedPickers2Input'
        type='text'
        class='form-control'
        data-td-target='#linkedPickers2'
        required
      />
      <span
        class='input-group-text'
        data-td-target='#linkedPickers2'
        data-td-toggle='datetimepicker'
      >
        <span class='fa-solid fa-calendar'></span>
      </span>
      </div>
    </div>
  </div>
</div>
<label id="message" class="text-danger d-block text-center"></label>
<div class="px-4 py-5  text-center" <% if (owner) { %> hidden <% } %>>
  <div class="col-lg-6 mx-auto">
    <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
      <button type="button" class=" sbtn btn-primary btn-lg px-4 gap-3" onclick="createReservation()">Prenota</button>
    </div>
  </div>
</div>
  <%- include("footer.ejs", {logged: logged}) %>
</body>
