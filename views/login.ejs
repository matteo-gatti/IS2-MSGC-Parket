<body>
 <%- include("header.ejs", { logged: logged }) %>
    <div class="container text-center">
        <div class="row"> 
        <div class="col-sm" ></div>
        <div class="col-sm form-signin ">
            
            <form id="login">
            <img class="mb-4" src="img/logo.png" alt="" width="200" height="200">
            <h1 class="h3 mb-3 fw-normal">Accedi con le tue credenziali!</h1>
            
            <p class="text-danger" id="message" hidden>Messaggio</p>

            <div class="form-floating">
                <input type="text" class="form-control" id="identifier" placeholder="name@example.com" required>
                <label for="floatingInput">Email address or Username</label>
            </div>
            <div class="mb-3"></div>
            <div class="form-floating">
                <input type="password" class="form-control" id="password" placeholder="Password" required>
                <label for="floatingPassword">Password</label>
            </div>
        
            <div class="checkbox mb-3">
                <!-- <label>
                <input type="checkbox" value="remember-me"> Remember me
                </label> -->
            </div> 
            <button class="w-100 btn btn-lg btn-primary" type="submit">Accedi</button>
